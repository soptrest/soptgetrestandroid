<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:gravity="center"
        android:id="@+id/ll_rv_item_recruit_overview_container_real">
        <ImageView
            android:layout_width="97dp"
            android:layout_margin="5dp"
            android:layout_height="54dp"
            android:src="@drawable/img_logo_blank"
            android:id="@+id/img_rv_item_recruit_overview_thumbnail_real"/>

        <View
            android:layout_width="2dp"
            android:layout_height="54dp"
            android:paddingLeft="6dp"
            android:background="#82bf59" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="11dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rv_item_recruit_overview_company_real"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="회사"
                    android:textColor="#201F1A"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_rv_item_recruit_overview_task_real"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:gravity="bottom"
                android:text="직무"
                android:textColor="#555555"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_rv_item_recruit_overview_deadline_real"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_weight="1"
                android:text="마감"
                android:textColor="#999999"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="1dp">
        <View
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#e7e7e7" />
        <View
            android:layout_width="16dp"
            android:layout_height="1dp" />
    </LinearLayout>
</LinearLayout>