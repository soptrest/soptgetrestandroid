<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MypageFragment"
    android:id="@+id/fl_mypage"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar_mypage"
            layout="@layout/toolbar_mypage"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/img_mypage_top"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_illust_mypage"
                                android:layout_alignParentTop="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:id="@+id/ll_mypage_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="117dp"
                                android:layout_marginTop="35dp">
                            <TextView
                                    android:id="@+id/txt_mypage_name"
                                    android:layout_alignParentTop="true"
                                    android:text="회원"
                                    android:textSize="18sp"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    android:letterSpacing="-0.03"
                                    android:lineSpacingExtra="4sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_toRightOf="@+id/txt_mypage_name"
                                    android:text="님"
                                    android:textSize="18sp"
                                    android:textColor="#ffffff"
                                    android:letterSpacing="-0.03"
                                    android:lineSpacingExtra="4sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/txt_mypage_fighting"
                                android:layout_below="@+id/ll_mypage_name"
                                android:text="오늘도 화이팅이에요"
                                android:textSize="18sp"
                                android:textColor="#ffffff"
                                android:letterSpacing="-0.03"
                                android:lineSpacingExtra="4sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="117dp"/>
                        <TextView
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="259.5dp"
                                android:layout_marginTop="101.5dp"
                                android:background="@drawable/mypage_button_border"
                                android:text="LOGOUT >"
                                android:textSize="11sp"
                                android:textStyle="normal"
                                android:textColor="#ffffff"
                                android:lineSpacingExtra="4sp"
                                android:paddingHorizontal="12.6dp"
                                android:paddingVertical="5.3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                        android:layout_marginTop="29dp"
                        android:layout_marginLeft="24dp"
                        android:text="개인정보"
                        android:textSize="15sp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="7sp"
                        android:textColor="#1e1e1e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="24dp"
                        android:text="이름"
                        android:textSize="13sp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="6sp"
                        android:textColor="#a2a2a2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:id="@+id/txt_mypage_name_editable"
                        android:background="@null"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="24dp"
                        android:text="김혜린"
                        android:textSize="15sp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="3sp"
                        android:textColor="#383838"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <View
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="24dp"
                        android:background="#a2a2a2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="24dp"
                        android:text="계정보안"
                        android:textSize="15sp"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="7sp"
                        android:textColor="#1e1e1e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RelativeLayout
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="아이디"
                            android:textSize="13sp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="6sp"
                            android:textColor="#a2a2a2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txt_mypage_id"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="23dp"
                            android:text="getrest190704"
                            android:textSize="15sp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="3sp"
                            android:textColor="#73bc42"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/img_mypage_change_pw"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="계정 비밀번호 변경"
                            android:textSize="13sp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="6sp"
                            android:textColor="#a2a2a2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:src="@drawable/btn_back_right"
                            android:layout_marginRight="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>