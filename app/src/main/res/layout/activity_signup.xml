<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:id="@+id/ll_signup"
        tools:context=".Activity.SignupActivity">

    <include
            android:id="@+id/toolbar_signup"
            layout="@layout/toolbar_signup"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_below="@+id/toolbar_signup"
            android:id="@+id/sv_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="24dp"
                            android:text="이름"
                            android:textColor="#1e1e1e"
                            android:textSize="14sp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_signup_name"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/signup_edt_border"
                            android:textColor="#82bf59"
                            android:lineSpacingExtra="6sp"
                            android:letterSpacing="-0.02"
                            android:textSize="14sp"
                            android:textColorHint="#c3c3c3"
                            android:hint="한글 또는 영문으로 씁시다"
                            android:layout_marginHorizontal="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="42dp">
                        </EditText>
                        <TextView
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="24dp"
                            android:text="아이디"
                            android:textColor="#1e1e1e"
                            android:textSize="14sp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_signup_id"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/signup_edt_border"
                            android:textColor="#82bf59"
                            android:lineSpacingExtra="6sp"
                            android:letterSpacing="-0.02"
                            android:textSize="14sp"
                            android:textColorHint="#c3c3c3"
                            android:hint="아이디"
                            android:layout_marginHorizontal="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="42dp">
                        </EditText>
                        <TextView
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="24dp"
                            android:text="비밀번호"
                            android:textColor="#1e1e1e"
                            android:textSize="14sp"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="6sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/edt_signup_password"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/signup_edt_border"
                            android:textColor="#000000"
                            android:lineSpacingExtra="6sp"
                            android:letterSpacing="-0.02"
                            android:textSize="14sp"
                            android:textColorHint="#c3c3c3"
                            android:hint="영어+숫자 6자 이상"
                            android:layout_marginHorizontal="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="textPassword">
                        </EditText>
                        <LinearLayout
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="24dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="비밀번호 확인"
                                android:textColor="#1e1e1e"
                                android:textSize="14sp"
                                android:letterSpacing="-0.02"
                                android:lineSpacingExtra="6sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txt_signup_message"
                                android:visibility="invisible"
                                android:layout_marginLeft="15dp"
                                android:textColor="#ff00ff"
                                android:textSize="10dp"
                                android:letterSpacing="-0.02"
                                android:lineSpacingExtra="6sp"
                                android:text="*비밀번호가 서로 맞지 않아요 ㅜㅅㅜ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/edt_signup_password_check"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/signup_edt_border"
                            android:textColor="#000000"
                            android:lineSpacingExtra="6sp"
                            android:letterSpacing="-0.02"
                            android:textSize="14sp"
                            android:textColorHint="#c3c3c3"
                            android:hint="한번 더 확인해봐요"
                            android:layout_marginHorizontal="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:inputType="textPassword">
                        </EditText>
                        <Button
                            android:id="@+id/btn_signup_complete"
                            android:background="@drawable/signup_btn_incomplete_border"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:layout_marginHorizontal="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="다썼어요"
                            android:textSize="18sp"
                            android:lineSpacingExtra="9sp"
                            android:textColor="#ffffff"
                            android:letterSpacing="-0.02"/>
                    </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@drawable/img_illust_signup"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
</RelativeLayout>