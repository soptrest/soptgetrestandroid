<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:background="#fdfeff"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="3dp"
              android:layout_marginHorizontal="16dp">

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <ImageView
                android:id="@+id/img_nav_category_main_home"
                android:src="@drawable/tab_layout_home_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_portfolio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <ImageView
                android:id="@+id/img_nav_category_main_portfolio"
                android:src="@drawable/tab_layout_portfolio_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <ImageView
                android:id="@+id/img_nav_category_main_notice"
                android:src="@drawable/tab_layout_notice_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_nav_category_main_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
        <ImageView
                android:id="@+id/img_nav_category_main_folder"
                android:src="@drawable/tab_layout_folder_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>