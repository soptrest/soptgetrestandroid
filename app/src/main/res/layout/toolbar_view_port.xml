<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:contentInsetStart="0dp"
                                   android:background="#ffffff"
                                   android:theme="@style/AppTheme">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        <ImageView
                android:id="@+id/img_toolbar_view_port_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_back" />

        <TextView
                android:id="@+id/txt_toolbar_view_port_cancel"
                android:layout_width="258dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기록보기"
                android:textColor="#82bf59"
                android:textSize="20sp"
                android:lineSpacingExtra="9sp"
                android:textStyle="bold"/>

        <ImageView
                android:id="@+id/img_toolbar_view_port_modify"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_edit_color" />

        <View
                android:layout_width="24dp"
                android:layout_height="0dp"/>

        <ImageView
                android:id="@+id/img_toolbar_view_port_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_trash_color" />

    </LinearLayout>
</android.support.v7.widget.Toolbar>