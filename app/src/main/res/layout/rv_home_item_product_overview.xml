<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_rv_home_item_product_overview_container"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_product_selector">
        <TextView
                android:textColor="@drawable/home_product_text_selector"
                android:id="@+id/txt_rv_home_item_product_overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 이름"
                android:textSize="18sp"
                android:letterSpacing="-0.06"
                android:lineSpacingExtra="9sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"/>
        <LinearLayout
                android:layout_below="@+id/txt_rv_home_item_product_overview_title"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@drawable/home_product_text_selector"
                    android:id="@+id/txt_rv_home_item_product_overview_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20XX.XX"
                    android:textSize="13sp"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="2sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="12dp"/>
            <TextView
                    android:id="@+id/txt_rv_home_item_product_overview_wave"
                    android:textColor="@drawable/home_product_text_selector"
                    android:text=" ~ "
                    android:textSize="13sp"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="2sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@drawable/home_product_text_selector"
                    android:id="@+id/txt_rv_home_item_product_overview_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20XX.XX"
                    android:textSize="13sp"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="2sp"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/img_rv_home_item_product_overview"
                android:layout_alignParentRight="true"
                android:layout_marginVertical="20dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/home_product_button_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>