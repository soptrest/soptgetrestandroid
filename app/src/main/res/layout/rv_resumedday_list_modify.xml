<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="#ffffff"
        android:theme="@style/AppTheme"
        android:elevation="4dp">

    <LinearLayout
            android:id="@+id/ll_rv_resumedday_list_modify"
            android:layout_width="328dp"
            android:layout_height="70dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_rv_resumedday_list_modify_dday"
                android:layout_height="match_parent"
                android:layout_width="70.5dp"
                android:text="D-0"
                android:gravity="center"
                android:textSize="22dp"/>

        <View
                android:layout_width="1dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:background="#82bf59"/>

        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingLeft="16.5dp"
                android:paddingRight="40dp"
                android:paddingTop="15dp"
                android:paddingBottom="13dp"
                android:orientation="vertical">


            <TextView
                    android:id="@+id/txt_rv_resumedday_list_modify_company"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="네이버"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#201f1a"/>

            <TextView
                    android:id="@+id/txt_rv_resumedday_list_modify_career"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="Web 디자이너/모바일.App 디자이너"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="#555555"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/img_rv_resumedday_modify_check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/selector_check_gray"/>

    </LinearLayout>

</RelativeLayout>