<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_rv_resume_question_chosen_item"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_rv_resume_question_chosen_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryLightGreen"
            android:textSize="13sp"
            android:lineSpacingExtra="5sp"/> <!-- 서버 통신으로 바꾸기!!! -->

        <TextView
            android:id="@+id/txt_rv_resume_question_chosen_thesis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#57564f"
            android:textSize="15sp"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="3sp"
            android:layout_marginBottom="14dp"/> <!-- 서버 통신으로 바꾸기!!! -->

    </LinearLayout>

</RelativeLayout>