<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Fragment.ResumeWrite1Fragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginBottom="11dp"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_resumeread_num"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:text="문항3"
                        android:textColor="#82bf59"
                        android:textSize="12sp" /> <!-- write액티비티별로 필요하진 ㄴㄴ-->

                    <TextView
                        android:id="@+id/txt_resumeread_3_thesis"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:text="3번 문항"
                        android:textColor="#201f1a"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_resumeread_career"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:text="네이버/다음 온라인마케팅 영업및관리"
                        android:layout_marginTop="13dp"/> <!-- write액티비티별로 필요하진 ㄴㄴ-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:layout_gravity="right"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/btn_resumeread_3_left"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="19dp"
                            android:src="@drawable/selector_resume_changeview_left"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:textColor="@color/colorPrimaryLightGreen"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="5sp"
                            android:gravity="center_horizontal"
                            android:text="3"/>

                        <ImageView
                            android:id="@+id/btn_resumeread_3_right"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/selector_resumeread_changeview_right"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="#38362e"
                        android:text="자소서 내용"
                        android:background="@null"
                        android:id="@+id/txt_resumeread_3_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:src="@drawable/line"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#bebcbc"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="6sp"
                            android:gravity="end"
                            android:text="공백포함"/>

                        <TextView
                            android:id="@+id/txt_resumeread_3_letter_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="#bebcbc"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="6sp"
                            android:gravity="end"
                            android:layout_marginLeft="12dp"
                            android:text="500자/"/>

                        <TextView
                            android:id="@+id/txt_resumeread_3_letter_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="@color/colorPrimaryLightGreen"
                            android:letterSpacing="-0.03"
                            android:lineSpacingExtra="6sp"
                            android:gravity="end"
                            android:text="0자"/> <!--글자수 세서 다시 카운트-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="21dp">

                        <ImageView
                            android:id="@+id/btn_resumeread_3_left_bottom"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src ="@drawable/selector_resume_changeview_left"
                            android:layout_marginRight="16dp"/>

                        <ImageView
                            android:id="@+id/btn_resumeread_3_right_bottom"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/selector_resumeread_changeview_right"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>