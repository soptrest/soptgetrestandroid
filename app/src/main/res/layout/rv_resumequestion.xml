<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="35dp">

    <LinearLayout
        android:id="@+id/ll_rv_resumequestion_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_rv_resumequestion_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문항 번호"
            android:textColor="@color/colorPrimaryLightGreen"
            android:lineSpacingExtra="5sp"
            android:textSize="13dp" /> <!-- 서버 통신으로 바꾸기!!! -->

        <TextView
            android:id="@+id/txt_rv_resumequestion_thesis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문항 내용"
            android:textColor="#57564f"
            android:textSize="15sp"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="3sp"
            android:layout_marginBottom="20dp"/> <!-- 서버 통신으로 바꾸기!!! -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:background="#ffffff"
            android:theme="@style/AppTheme"/>

        <RelativeLayout
            android:id="@+id/rl_rv_resumequestion_plusbutton"
            android:layout_width="match_parent"
            android:layout_height="107dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_add_memory"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>