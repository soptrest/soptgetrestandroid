<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_resume_question_choice"
            android:id="@+id/toolbar_portfolio"/>

        <android.support.design.widget.TabLayout
            android:background="#ffffff"
            android:theme="@style/AppTheme"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:id="@+id/tl_main_portfolio_category"
            app:tabMode="scrollable"
            app:tabIndicatorColor="#82bf59">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:background="#ffffff"
            android:id="@+id/vp_main_portfolio"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:name="org.sopt24.khl6235.getrest.Fragment.PortfolioFragment" />-->
    </LinearLayout>
</RelativeLayout>