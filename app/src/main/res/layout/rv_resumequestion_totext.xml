<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="70dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/ll_rv_resumequestion_totext_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10.5dp">

        <TextView
            android:id="@+id/txt_rv_resumequestion_totext_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:text="문항1"
            android:textColor="@color/colorPrimaryLightGreen"
            android:textSize="13sp"
            android:layout_marginBottom="2dp"/> <!-- 서버 통신으로 바꾸기!!! -->

        <TextView
            android:id="@+id/txt_rv_resumequestion_totext_thesis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="3sp"
            android:textColor="#57564f"
            android:text="문항 내용"
            android:textSize="15sp" /> <!-- 서버 통신으로 바꾸기!!! -->

        <LinearLayout
            android:id="@+id/ll_rv_resumequestion_totext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingTop="13dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:elevation="4dp"
            android:theme="@style/AppTheme">

            <!-- 나중에 id 바꾸기 -->

            <TextView
                android:id="@+id/txt_rv_resumequestion_totext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="솝트"
                android:textColor="#797979"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_rv_resumequestion_totext_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="10sp"
                android:paddingVertical="5dp"
                android:text="솝트ㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌㅅㅌ"
                android:textColor="#8038362e"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>